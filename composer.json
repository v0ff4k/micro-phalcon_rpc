{
    "name": "vladimir/micro_phalcon-start",
    "description": "My 1st start with Phalcon and docker. Using Micro() with json-rpc as MiddleWare",
    "type": "project",
    "autoload": {
        "psr-4": {
            "AppUsers\\": "users/",
            "AppSite\\": "site/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "require": {
        "php": ">=7.1",
        "ext-phalcon": "~3.0",
        "phalcon/cphalcon": "3.4.2",
        "vlucas/phpdotenv": "2.5.2"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2"
    },
    "license": "proprietary",
    "authors": [{"name": "Vladimir Che", "email": "v0ff@bk.ru"}],
    "minimum-stability": "beta",
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phalcon/incubator": "^3.4",
        "symfony/var-dumper": "^3.4",
        "phalcon/dd": "^1.1"
    },
    "config": {
        "platform": {
            "php": "7.1"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
